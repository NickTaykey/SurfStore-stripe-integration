<% layout("layouts/post-show-layout") -%>
<h1><%= post.title %></h1>
<div>Price: <%= post.price %></div>
<div><%= post.description %></div>
<div>
  <% post.images.forEach(img=>{ %>
  <img src="<%= img.url %>" alt="surf board image" width="200px" />
  <% }) %>
</div>
<div><%= post.location %></div>
<div>
  <% for(let i = 0; i<5; i++){ %>
    <!-- se i<media intera : una stella completa -->
    <% if(i<floorRating){ %>
      <i class="fas fa-star"></i>
      <!-- se c'è una parte decimale nella media che è compresa tra 0 e 1 : mezza stella -->
    <% } else if((post.avgRating-i)>0 && (post.avgRating-i)<1) { %>
      <i class="fas fa-star-half-alt"></i>
      <!-- altrimenti stella vuota -->
    <% } else { %>
      <i class="far fa-star"></i>
    <% } %>
  <% } %>
</div>

<!-- LA MAPPA ANDRA' QUI (in un div con id MAP) -->
<div id="map"></div>
<%# solo se l'utente è loggato ed è l'autore del post mostra i pulsanti edit, delete post %>
<% if(currentUser && post.author.equals(currentUser._id)){ %>
  <div>
    <a href="/posts/<%= post.id %>/edit">
      <button>Edit</button>
    </a>
  </div>
  <div>
    <form action="/posts/<%= post.id %>?_method=DELETE" method="POST">
      <input type="submit" value="Delete" />
    </form>
  </div>
<% } %>
<!-- REVIEWS -->
<% if(currentUser){ %>
<h2>Leave a review</h2>
<form
  action="/posts/<%= post._id %>/reviews"
  method="post"
  class="new-review-form"
>
  <textarea name="review[body]" cols="30" rows="10" required></textarea>
  <fieldset class="starability-basic">
    <legend>rating:</legend>
    <button class="clear-rating-btn" type="button">Clear rating</button>
    <input
      type="radio"
      id="no-rate"
      class="input-no-rate"
      name="review[rating]"
      value="0"
      checked
      aria-label="No rating."
    />
    <input type="radio" id="rate1" name="review[rating]" value="1" />
    <label for="rate1" title="Terrible">1 star</label>
    <input type="radio" id="rate2" name="review[rating]" value="2" />
    <label for="rate2" title="Not good">2 stars</label>
    <input type="radio" id="rate3" name="review[rating]" value="3" />
    <label for="rate3" title="Average">3 stars</label>
    <input type="radio" id="rate4" name="review[rating]" value="4" />
    <label for="rate4" title="Very good">4 stars</label>
    <input type="radio" id="rate5" name="review[rating]" value="5" />
    <label for="rate5" title="Amazing">5 stars</label>
  </fieldset>
  <input type="submit" value="Submit" />
</form>
<% } else { %>
<h2><a href="/login?returnTo=true">Leave a Review</a></h2>
<% } %>
<h3>all the reviews</h3>
<% post.reviews.forEach(function(review){ %>
<div>
  <strong><%= review.author.username %></strong>
  <p class="starability-result" data-rating="<%= review.rating %>"></p>
  <p><%= review.body %></p>
  <% if(currentUser && review.author.equals(currentUser._id)){ %>
  <br />
  <button class="edit-review-button">Edit</button>
  <form
    action="/posts/<%= post.id %>/reviews/<%= review.id %>?_method=PUT"
    method="POST"
    class="edit-review-form"
  >
    <textarea name="review[body]" cols="30" rows="10" required>
<%= review.body %></textarea
    >
    <fieldset class="starability-basic">
      <legend>Edit rating:</legend>
      <button class="clear-rating-btn" type="button">Clear rating</button>
      <input
        type="radio"
        id="edit-no-rate"
        class="input-no-rate"
        name="review[rating]"
        value="0"
        checked
        aria-label="No rating."
      />
      <input type="radio" id="edit-rate1" name="review[rating]" value="1" />
      <label for="edit-rate1" title="Terrible">1 star</label>
      <input type="radio" id="edit-rate2" name="review[rating]" value="2" />
      <label for="edit-rate2" title="Not good">2 stars</label>
      <input type="radio" id="edit-rate3" name="review[rating]" value="3" />
      <label for="edit-rate3" title="Average">3 stars</label>
      <input type="radio" id="edit-rate4" name="review[rating]" value="4" />
      <label for="edit-rate4" title="Very good">4 stars</label>
      <input type="radio" id="edit-rate5" name="review[rating]" value="5" />
      <label for="edit-rate5" title="Amazing">5 stars</label>
    </fieldset>
    <input type="submit" value="Update" />
    <script>
      $("#edit-rate<%= review.rating %>").attr("checked", true);
    </script>
  </form>

  <form
    action="/posts/<%= post._id %>/reviews/<%= review._id %>?_method=DELETE"
    method="post"
    class="delete-review-form"
  >
    <input type="submit" value="Delete" />
  </form>
  <% } %>
</div>
<hr />
<% }) %>
