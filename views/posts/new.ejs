<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <form action="/posts" method="POST" id="new-post-form" enctype="multipart/form-data">
          <h1 class="text-center my-5" id="form-title">Sell a Board</h1>
          <div class="d-flex align-items-center justify-content-center my-5" id="uploading-spinner" style="display: none!important;">
            <div class="mr-4">
              <div class="spinner-border ml-auto" role="status" aria-hidden="true"></div>
            </div>
            <h3>Uploading the images</h3>
          </div>
          <div class="row">
            <section class="col-12">
              <div class="form-group">
                <input class="form-control" type="text" placeholder="Title" name="post[title]" />
              </div>
              <div class="form-group">
                <input class="form-control" type="file" name="images" accept="image/*" multiple id="file-input">
              </div>
              <div class="form-group">
                <input class="form-control" type="number" placeholder="Price" name="post[price]" step=".01" />
              </div>
              <div class="form-group">
                <input type="text" class="form-control" name="post[description]" placeholder="Description">
              </div>
              <div class="form-group">
                <input class="form-control" type="text" placeholder="Location" name="post[location]" />
              </div>
              <div class="form-group">
                <input class="btn btn-primary btn-block" type="submit" value="submit" />
                <button type="button" id="close-btn" class="btn btn-secondary btn-block" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger btn-block" id="reset-new-form">Reset Form</button>
              </div>
            </section>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>