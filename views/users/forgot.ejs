<% layout("layouts/boilerplate") -%>
<div class="row">
  <div class="col-12 col-lg-6 offset-lg-3">
    <h1 class="text-center my-5">Forgot Password</h1>
    <form action="/forgot-password?_method=PUT" method="POST">
      <div class="form-group">
        <label for="email">The email you registered your account with:</label>
        <input class="form-control" type="email" id="email" name="email" placeholder="e-mail" required autofocus /></div>
      <div>
      <input type="submit" class="btn btn-warning btn-block" value="Reset Password">
    </form>
  </div>
</div>
